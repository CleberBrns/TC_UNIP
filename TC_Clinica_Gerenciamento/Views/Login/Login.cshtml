@model TC_Clinica_Gerenciamento.Models.Servico.Usuario

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    <div class="container" style="width: 80%">
        <div class="row well">
            <div class="divQuadro text-center">
                <div class="divInputs">
                    <form>
                        <div class="form-group">
                            <input type="text" name="Email" placeholder="Email" class="caixaTexto nome">
                        </div>
                        <div class="form-group">
                            <input type="password" name="Senha" placeholder="Senha" class="caixaTexto senha">
                        </div>
                        <div class="divBotoes">
                            <div class="form-group">
                                <input type="button" id="btEntrar" class="btn btn-primary" value="Entrar">
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>

    $("#btEntrar").on("click", function () {

        debugger;
            $.ajax({
                url: "@Url.Action("Login", "Login")",
                type: "GET",
                data: $('form').serialize(),
                success: function (result) {

                    var retorno = result.mensagensRetorno;
                    if (retorno.Status) {
                        var url = href = '@Url.Action("Index", "Inicio", new { area = "Inicio" })';
                            window.location.href = url;
                    }
                    else {
                        swal({
                            title: '',
                            text: retorno.MensagemExibicao,
                            type: 'warning',
                            confirmButtonColor: '#10386B',
                            allowOutsideClick: false
                        });
                        console.log(retorno.MensagemAnalise);
                    }
                   
                },error: function (jqXHR, textStatus, errorThrown) {
                    validacao.errorAjax(jqXHR, textStatus, errorThrown);
                }
            });

    });

</script>