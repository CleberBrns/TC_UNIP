@using TC_Clinica_Gerenciamento.Models.Local

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    <div class="container" style="width: 80%">
        <div class="row well">
            <div class="divQuadro text-center">
                <div class="divInputs">
                    <form>
                        <div class="form-group">
                            <input type="text" name="nome" placeholder="Usuário" class="caixaTexto nome">
                        </div>
                        <div class="form-group">
                            <input type="password" name="senha" placeholder="Senha" class="caixaTexto senha">
                        </div>
                        <div class="divBotoes">
                            <div class="form-group">
                                <a href="" class="linkButton">Esqueci Minha Senha</a>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="login" id="btEntrar" class="btn btn-primary" value="Entrar">
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>

    $("#btEntrar").on("click", function () {

        console.log($('.nome').val() + " - " + $('.senha').val());

    });

</script>